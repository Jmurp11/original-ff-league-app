							      labels: ["2011", "2012", "2013", "2014", "2015", "2016", "2017"],
							      datasets: [dataFirst, dataSecond]
							    };
							    
							    var chartOptions = {
							      legend: {
							        display: true,
							        position: 'top',
							        labels: {
							          boxWidth: 80,
							          fontColor: 'black'
							        }
							      }
							    };
							    
							    var lineChart = new Chart(winsChart, {
							      type: 'line',
							      data: yearData,
							      options: chartOptions
							    });
							    
