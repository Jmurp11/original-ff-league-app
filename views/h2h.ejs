							<canvas id="wpChart" width="150" height="50" style='display:none;'></canvas>
						</div>
						<script>
							  	var winsChart = document.getElementById("winsChart");

							    Chart.defaults.global.defaultFontFamily = "Lato";
							    Chart.defaults.global.defaultFontSize = 18;
							    
							    var dataFirst = {
							        label: $('#n1').text(),
							        data: [<%= t1w %>],
							        lineTension: 0.3,
							        fill: false,
							        borderColor: '#B92D0B',
							        backgroundColor: 'transparent',
							        pointBorderColor: '#B92D0B',
							        pointBackgroundColor: '#F7FA21',
							        pointRadius: 5,
							        pointHoverRadius: 15,
